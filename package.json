{
  "name": "book-management-service",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "lint": "vue-cli-service lint",
    "serve:firestoreEmulator": "firebase emulators:start --only firestore",
    "test": "npm run test:unit",
    "test:unit": "start-server-and-test serve:firestoreEmulator http-get://localhost:5000 test:unit:cmd",
    "test:unit:cmd": "cross-env FIRESTORE_EMULATOR_HOST=localhost:5000 vue-cli-service test:unit --forceExit",
    "updateSnapshot": "npm run test:unit -- -u",
    "build": "vue-cli-service build --mode production && npm --prefix functions run build",
    "serve": "vue-cli-service serve --mode develop",
    "storybook": "start-storybook -p 6006"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{vue,ts}": [
      "vue-cli-service lint",
      "git add"
    ]
  },
  "dependencies": {
    "auth0-js": "^9.11.3",
    "axios": "^0.19.0",
    "core-js": "^3.3.6",
    "firebase": "^7.2.3",
    "http2": "^3.3.7",
    "moment": "^2.24.0",
    "regenerator-runtime": "^0.13.3",
    "register-service-worker": "^1.6.2",
    "vue": "^2.6.10",
    "vue-class-component": "^7.1.0",
    "vue-property-decorator": "^8.3.0",
    "vue-router": "^3.1.3",
    "vuetify": "^2.1.9",
    "vuex": "^3.1.1",
    "vuex-smart-module": "^0.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.6.4",
    "@babel/preset-env": "^7.6.3",
    "@firebase/testing": "^0.16.6",
    "@storybook/addon-a11y": "^5.2.5",
    "@storybook/addon-actions": "^5.2.5",
    "@storybook/addon-backgrounds": "^5.2.5",
    "@storybook/addon-console": "^1.2.1",
    "@storybook/addon-links": "^5.2.5",
    "@storybook/addon-storyshots": "^5.2.5",
    "@storybook/addon-viewport": "^5.2.5",
    "@storybook/theming": "^5.2.5",
    "@storybook/vue": "^5.2.5",
    "@types/auth0-js": "^9.10.6",
    "@types/axios": "^0.14.0",
    "@types/jest": "^24.0.21",
    "@vue/cli-plugin-babel": "^4.0.5",
    "@vue/cli-plugin-eslint": "^4.0.5",
    "@vue/cli-plugin-pwa": "^4.0.5",
    "@vue/cli-plugin-typescript": "^4.0.5",
    "@vue/cli-plugin-unit-jest": "^4.0.5",
    "@vue/cli-service": "^4.0.5",
    "@vue/eslint-config-prettier": "^5.0.0",
    "@vue/eslint-config-typescript": "^4.0.0",
    "@vue/test-utils": "1.0.0-beta.29",
    "acorn": "^7.1.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^8.0.6",
    "babel-plugin-require-context-hook": "^1.0.0",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "babel-preset-vue": "^2.0.2",
    "canvas": "^2.6.0",
    "cross-env": "^6.0.3",
    "eslint": "^5.16.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-vue": "^5.2.3",
    "fibers": "^4.0.2",
    "firebase-tools": "^7.6.2",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^3.0.9",
    "jest-canvas-mock": "^2.1.2",
    "lint-staged": "^9.4.2",
    "node-sass": "^4.13.0",
    "prettier": "^1.18.2",
    "sass": "^1.23.3",
    "sass-loader": "^8.0.0",
    "start-server-and-test": "^1.10.6",
    "ts-jest": "^24.1.0",
    "typescript": "^3.6.4",
    "vue-cli-plugin-vuetify": "^1.1.1",
    "vue-loader": "^15.7.2",
    "vue-template-compiler": "^2.6.10",
    "vuetify-loader": "^1.3.0",
    "webpack": "^4.41.2"
  }
}
