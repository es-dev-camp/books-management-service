{
  "name": "book-management-service",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "install:all": "yarn install && yarn --cwd ./functions install",
    "lint": "vue-cli-service lint",
    "serve:firestoreEmulator": "firebase emulators:start --only firestore",
    "test": "yarn test:unit",
    "test:unit": "start-server-and-test serve:firestoreEmulator http-get://localhost:5000 test:unit:cmd",
    "test:unit:cmd": "cross-env FIRESTORE_EMULATOR_HOST=localhost:5000 vue-cli-service test:unit --forceExit ${JEST_ARGS}",
    "updateSnapshot": "JEST_ARGS='-u' yarn test:unit",
    "build": "vue-cli-service build --mode production && yarn --cwd ./functions run build",
    "serve": "vue-cli-service serve --mode develop",
    "serve:functions": "yarn --cwd ./functions serve",
    "storybook": "start-storybook -p 6006"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{vue,ts}": [
      "vue-cli-service lint",
      "git add"
    ]
  },
  "dependencies": {
    "auth0-js": "^9.13.2",
    "axios": "^0.19.2",
    "cache-loader": "^4.1.0",
    "core-js": "^3.6.5",
    "firebase": "^7.14.2",
    "http2": "^3.3.7",
    "moment": "^2.25.1",
    "regenerator-runtime": "^0.13.5",
    "register-service-worker": "^1.7.1",
    "vue": "^2.6.11",
    "vue-analytics": "^5.22.1",
    "vue-class-component": "^7.2.3",
    "vue-property-decorator": "^8.4.2",
    "vue-router": "^3.1.6",
    "vuetify": "^2.2.26",
    "vuex": "^3.3.0",
    "vuex-smart-module": "^0.3.4"
  },
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@firebase/testing": "^0.19.2",
    "@storybook/addon-a11y": "^5.3.18",
    "@storybook/addon-actions": "^5.3.18",
    "@storybook/addon-backgrounds": "^5.3.18",
    "@storybook/addon-console": "^1.2.1",
    "@storybook/addon-links": "^5.3.18",
    "@storybook/addon-storyshots": "^5.3.18",
    "@storybook/addon-viewport": "^5.3.18",
    "@storybook/theming": "^5.3.18",
    "@storybook/vue": "^5.3.18",
    "@types/auth0-js": "^9.12.4",
    "@types/axios": "^0.14.0",
    "@types/jest": "^25.2.1",
    "@vue/babel-preset-app": "^4.3.1",
    "@vue/cli-plugin-babel": "^4.3.1",
    "@vue/cli-plugin-eslint": "^4.3.1",
    "@vue/cli-plugin-pwa": "^4.3.1",
    "@vue/cli-plugin-typescript": "^4.3.1",
    "@vue/cli-plugin-unit-jest": "^4.3.1",
    "@vue/cli-service": "^4.3.1",
    "@vue/eslint-config-prettier": "5.0.0",
    "@vue/eslint-config-typescript": "4.0.0",
    "@vue/test-utils": "^1.0.0-beta.33",
    "acorn": "^7.1.1",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "babel-plugin-require-context-hook": "^1.0.0",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "babel-preset-vue": "^2.0.2",
    "canvas": "^2.6.1",
    "cross-env": "^7.0.2",
    "eslint": "^5.16.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-vue": "^5.2.3",
    "fibers": "^5.0.0",
    "firebase-tools": "^8.2.0",
    "html-webpack-plugin": "^4.3.0",
    "husky": "^4.2.5",
    "jest-canvas-mock": "^2.2.0",
    "lint-staged": "^10.2.2",
    "node-sass": "^4.14.0",
    "prettier": "^1.18.2",
    "sass": "^1.26.5",
    "sass-loader": "^8.0.2",
    "start-server-and-test": "^1.11.0",
    "ts-jest": "^25.4.0",
    "typescript": "^3.8.3",
    "vue-cli-plugin-vuetify": "^2.0.5",
    "vue-loader": "^15.9.2",
    "vue-template-compiler": "^2.6.11",
    "vuetify-loader": "^1.4.3",
    "webpack": "^4.43.0"
  }
}
