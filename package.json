{
  "name": "book-management-service",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "install:all": "yarn install && yarn --cwd ./functions install",
    "lint": "vue-cli-service lint",
    "serve:firestoreEmulator": "firebase emulators:start --only firestore",
    "test": "yarn test:unit",
    "test:unit": "start-server-and-test serve:firestoreEmulator http-get://localhost:5000 test:unit:cmd",
    "test:unit:cmd": "cross-env FIRESTORE_EMULATOR_HOST=localhost:5000 vue-cli-service test:unit ${JEST_ARGS}",
    "updateSnapshot": "JEST_ARGS='-u' yarn test:unit",
    "build": "vue-cli-service build --mode production && yarn --cwd ./functions run build",
    "serve": "vue-cli-service serve --mode develop",
    "serve:functions": "yarn --cwd ./functions serve",
    "storybook": "start-storybook -p 6006"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test && yarn --cwd ./functions test"
    }
  },
  "lint-staged": {
    "**/*.{vue,ts}": [
      "vue-cli-service lint",
      "git add"
    ]
  },
  "dependencies": {
    "auth0-js": "^9.13.4",
    "axios": "^0.20.0",
    "cache-loader": "^4.1.0",
    "core-js": "^3.6.5",
    "firebase": "^7.19.1",
    "http2": "^3.3.7",
    "jest-canvas-mock": "^2.2.0",
    "moment": "^2.27.0",
    "regenerator-runtime": "^0.13.7",
    "register-service-worker": "^1.7.1",
    "vue": "^2.6.12",
    "vue-analytics": "^5.22.1",
    "vue-class-component": "^7.2.5",
    "vue-property-decorator": "^9.0.0",
    "vue-router": "^3.4.3",
    "vuetify": "^2.3.10",
    "vuex": "^3.5.1",
    "vuex-smart-module": "^0.4.5"
  },
  "devDependencies": {
    "@babel/core": "^7.11.4",
    "@babel/preset-env": "^7.11.0",
    "@firebase/testing": "^0.20.11",
    "@storybook/addon-a11y": "^6.0.20",
    "@storybook/addon-actions": "^6.0.20",
    "@storybook/addon-backgrounds": "^6.0.20",
    "@storybook/addon-console": "^1.2.1",
    "@storybook/addon-links": "^6.0.20",
    "@storybook/addon-storyshots": "^6.0.20",
    "@storybook/addon-viewport": "^6.0.20",
    "@storybook/theming": "^6.0.20",
    "@storybook/vue": "^6.0.20",
    "@types/auth0-js": "^9.13.4",
    "@types/axios": "^0.14.0",
    "@types/jest": "^26.0.10",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "@vue/babel-preset-app": "^4.5.4",
    "@vue/cli-plugin-babel": "^4.5.4",
    "@vue/cli-plugin-eslint": "^4.5.4",
    "@vue/cli-plugin-pwa": "^4.5.4",
    "@vue/cli-plugin-typescript": "^4.5.4",
    "@vue/cli-plugin-unit-jest": "^4.5.4",
    "@vue/cli-service": "^4.5.4",
    "@vue/eslint-config-prettier": "6.0.0",
    "@vue/eslint-config-typescript": "^5.1.0",
    "@vue/test-utils": "^1.0.4",
    "acorn": "^8.0.1",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "babel-plugin-require-context-hook": "^1.0.0",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "babel-preset-vue": "^2.0.2",
    "codecov": "^3.7.2",
    "cross-env": "^7.0.2",
    "eslint": "^7.7.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-vue": "^6.2.2",
    "fibers": "5.0.0",
    "firebase-tools": "^8.9.2",
    "html-webpack-plugin": "^4.3.0",
    "husky": "^4.2.5",
    "jest": "^26.4.2",
    "lint-staged": "^10.2.13",
    "node-sass": "^4.14.1",
    "prettier": "^2.1.1",
    "sass": "^1.26.10",
    "sass-loader": "^10.0.1",
    "start-server-and-test": "^1.11.3",
    "ts-jest": "^26.3.0",
    "typescript": "^4.0.2",
    "vue-cli-plugin-vuetify": "^2.0.7",
    "vue-loader": "^15.9.3",
    "vue-template-compiler": "^2.6.12",
    "vuetify-loader": "^1.6.0",
    "webpack": "^4.44.1"
  }
}
