{
  "name": "book-management-service",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "install:all": "yarn install && yarn --cwd ./functions install",
    "lint": "vue-cli-service lint",
    "serve:firestoreEmulator": "firebase emulators:start --only firestore",
    "test": "yarn test:unit",
    "test:unit": "start-server-and-test serve:firestoreEmulator http-get://localhost:5000 test:unit:cmd",
    "test:unit:cmd": "cross-env FIRESTORE_EMULATOR_HOST=localhost:5000 vue-cli-service test:unit ${JEST_ARGS}",
    "updateSnapshot": "JEST_ARGS='-u' yarn test:unit",
    "build": "vue-cli-service build --mode production && yarn --cwd ./functions run build",
    "serve": "vue-cli-service serve --mode develop",
    "serve:functions": "yarn --cwd ./functions serve",
    "storybook": "start-storybook -p 6006"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test && yarn --cwd ./functions test"
    }
  },
  "lint-staged": {
    "**/*.{vue,ts}": [
      "vue-cli-service lint",
      "git add"
    ]
  },
  "dependencies": {
    "axios": "^0.21.0",
    "firebase": "^8.0.0",
    "moment": "^2.29.1",
    "vue": "^2.6.12",
    "vue-analytics": "^5.22.1",
    "vue-class-component": "^7.2.6",
    "vue-property-decorator": "^9.0.2",
    "vue-router": "^3.4.8",
    "vuetify": "^2.3.16",
    "vuex": "^3.5.1",
    "vuex-smart-module": "^0.4.6"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@firebase/testing": "^0.20.11",
    "@storybook/addon-a11y": "^6.0.28",
    "@storybook/addon-actions": "^6.0.28",
    "@storybook/addon-backgrounds": "^6.0.28",
    "@storybook/addon-console": "^1.2.2",
    "@storybook/addon-essentials": "^6.0.28",
    "@storybook/addon-links": "^6.0.28",
    "@storybook/addon-storyshots": "^6.0.28",
    "@storybook/addon-viewport": "^6.0.28",
    "@storybook/theming": "^6.0.28",
    "@storybook/vue": "^6.0.28",
    "@types/axios": "^0.14.0",
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "@vue/babel-preset-app": "^4.5.8",
    "@vue/cli-plugin-babel": "^4.5.8",
    "@vue/cli-plugin-eslint": "^4.5.8",
    "@vue/cli-plugin-pwa": "^4.5.8",
    "@vue/cli-plugin-typescript": "^4.5.8",
    "@vue/cli-plugin-unit-jest": "^4.5.8",
    "@vue/cli-service": "^4.5.8",
    "@vue/eslint-config-prettier": "^6.0.0",
    "@vue/eslint-config-typescript": "^7.0.0",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "babel-plugin-require-context-hook": "^1.0.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.12.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-vue": "^7.1.0",
    "firebase-tools": "^8.14.1",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "jest-canvas-mock": "^2.3.0",
    "lint-staged": "^10.5.1",
    "prettier": "^2.1.2",
    "sass": "^1.28.0",
    "sass-loader": "^10.0.5",
    "start-server-and-test": "^1.11.5",
    "ts-jest": "^26.4.3",
    "typescript": "^4.0.5",
    "vue-loader": "^15.9.5",
    "vue-template-compiler": "^2.6.12",
    "vuetify-loader": "^1.6.0",
    "webpack": "4"
  }
}
