{
  "name": "book-management-service",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "lint": "vue-cli-service lint",
    "test:unit": "vue-cli-service test:unit",
    "build": "vue-cli-service build --mode production && npm --prefix functions run build",
    "serve": "vue-cli-service serve --mode develop",
    "storybook": "start-storybook -p 6006"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "dependencies": {
    "auth0-js": "^9.11.3",
    "axios": "^0.19.0",
    "core-js": "^3.2.1",
    "firebase": "^7.0.0",
    "http2": "^3.3.7",
    "moment": "^2.24.0",
    "regenerator-runtime": "^0.13.3",
    "register-service-worker": "^1.6.2",
    "vue": "^2.6.10",
    "vue-class-component": "^7.0.2",
    "vue-property-decorator": "^8.1.0",
    "vue-router": "^3.0.7",
    "vuetify": "^2.1.2",
    "vuex": "^3.1.1",
    "vuex-smart-module": "^0.3.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.6.2",
    "@storybook/addon-a11y": "^5.2.5",
    "@storybook/addon-actions": "^5.2.5",
    "@storybook/addon-console": "^1.2.1",
    "@storybook/addon-links": "^5.2.5",
    "@storybook/addon-storyshots": "^5.2.5",
    "@storybook/addon-viewport": "^5.2.4",
    "@storybook/vue": "^5.2.4",
    "@types/auth0-js": "^9.10.6",
    "@types/axios": "^0.14.0",
    "@types/jest": "^24.0.18",
    "@vue/cli-plugin-babel": "^3.11.0",
    "@vue/cli-plugin-eslint": "^3.11.0",
    "@vue/cli-plugin-pwa": "^3.11.0",
    "@vue/cli-plugin-typescript": "^3.11.0",
    "@vue/cli-plugin-unit-jest": "^3.9.0",
    "@vue/cli-service": "^3.11.0",
    "@vue/eslint-config-prettier": "^5.0.0",
    "@vue/eslint-config-typescript": "^4.0.0",
    "@vue/test-utils": "1.0.0-beta.29",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-plugin-require-context-hook": "^1.0.0",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "babel-preset-vue": "^2.0.2",
    "eslint": "^5.16.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-vue": "^5.0.0",
    "firebase-tools": "^7.3.2",
    "husky": "^3.0.7",
    "jest-canvas-mock": "^2.1.2",
    "lint-staged": "^8.1.5",
    "prettier": "^1.18.2",
    "sass": "^1.17.4",
    "sass-loader": "^7.1.0",
    "ts-jest": "^23.0.0",
    "typescript": "^3.6.0",
    "vue-cli-plugin-vuetify": "^0.6.3",
    "vue-template-compiler": "^2.6.10",
    "vuetify-loader": "^1.3.0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "@vue/prettier",
      "@vue/typescript"
    ],
    "rules": {},
    "parserOptions": {
      "parser": "@typescript-eslint/parser"
    },
    "overrides": [
      {
        "files": [
          "**/__tests__/*.{j,t}s?(x)"
        ],
        "env": {
          "jest": true
        }
      }
    ]
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,vue,ts}": [
      "vue-cli-service lint",
      "git add"
    ]
  }
}
