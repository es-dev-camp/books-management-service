{
  "name": "book-management-service",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "install:all": "yarn install && yarn --cwd ./functions install",
    "lint": "vue-cli-service lint",
    "serve:firestoreEmulator": "firebase emulators:start --only firestore",
    "test": "yarn test:unit",
    "test:unit": "start-server-and-test serve:firestoreEmulator http-get://localhost:5000 test:unit:cmd",
    "test:unit:cmd": "cross-env FIRESTORE_EMULATOR_HOST=localhost:5000 vue-cli-service test:unit ${JEST_ARGS}",
    "updateSnapshot": "JEST_ARGS='-u' yarn test:unit",
    "build": "vue-cli-service build --mode production && yarn --cwd ./functions run build",
    "serve": "vue-cli-service serve --mode develop",
    "serve:functions": "yarn --cwd ./functions serve",
    "storybook": "start-storybook -p 6006"
  },
  "lint-staged": {
    "**/*.{vue,ts}": [
      "vue-cli-service lint"
    ]
  },
  "dependencies": {
    "axios": "0.21.1",
    "firebase": "8.6.2",
    "moment": "2.29.1",
    "vue": "2.6.12",
    "vue-class-component": "7.2.6",
    "vue-property-decorator": "9.1.2",
    "vue-router": "3.5.1",
    "vuetify": "2.5.1",
    "vuex": "3.6.2",
    "vuex-smart-module": "0.5.0"
  },
  "devDependencies": {
    "@babel/core": "7.13.15",
    "@firebase/testing": "0.20.11",
    "@storybook/addon-a11y": "6.2.9",
    "@storybook/addon-actions": "6.2.9",
    "@storybook/addon-backgrounds": "6.2.9",
    "@storybook/addon-console": "1.2.3",
    "@storybook/addon-essentials": "6.2.9",
    "@storybook/addon-links": "6.2.9",
    "@storybook/addon-storyshots": "6.2.9",
    "@storybook/addon-viewport": "6.2.9",
    "@storybook/theming": "6.2.9",
    "@storybook/vue": "6.2.9",
    "@types/axios": "0.14.0",
    "@typescript-eslint/eslint-plugin": "4.25.0",
    "@typescript-eslint/parser": "4.25.0",
    "@vue/babel-preset-app": "4.5.13",
    "@vue/cli-plugin-babel": "4.5.13",
    "@vue/cli-plugin-eslint": "4.5.13",
    "@vue/cli-plugin-pwa": "4.5.13",
    "@vue/cli-plugin-typescript": "4.5.13",
    "@vue/cli-plugin-unit-jest": "4.5.13",
    "@vue/cli-service": "4.5.13",
    "@vue/eslint-config-prettier": "6.0.0",
    "@vue/eslint-config-typescript": "7.0.0",
    "babel-eslint": "10.1.0",
    "babel-loader": "8.2.2",
    "babel-plugin-require-context-hook": "1.0.0",
    "cache-loader": "4.1.0",
    "cross-env": "7.0.3",
    "eslint": "7.27.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "3.4.0",
    "eslint-plugin-vue": "7.9.0",
    "firebase-tools": "9.11.0",
    "husky": "6.0.0",
    "jest": "27.0.1",
    "jest-canvas-mock": "2.3.1",
    "lint-staged": "11.0.0",
    "prettier": "2.3.0",
    "sass": "1.34.0",
    "sass-loader": "10.2.0",
    "start-server-and-test": "1.12.3",
    "ts-jest": "26.5.6",
    "typescript": "4.2.4",
    "vue-jest": "3.0.7",
    "vue-loader": "15.9.7",
    "vue-template-compiler": "2.6.12",
    "vuetify-loader": "1.7.2",
    "webpack": "4.46.0"
  }
}
