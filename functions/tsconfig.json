{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "baseUrl": ".",
    "types": ["jest"],
    "paths": {
      "@common/*": ["../common/*"]
    }
  },
  "compileOnSave": true,
  "include": [
    "src",
    "../common/*.ts"
  ],
  "exclude": ["node_modules"]
}
